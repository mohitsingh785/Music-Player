<!-- Example layout_floating_player.xml -->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/black"
    android:id="@+id/floating_player"
    android:visibility="gone"
    android:padding="8dp">

    <ImageView
        android:id="@+id/float_coverImage"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/img" />

    <TextView
        android:id="@+id/float_trackName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/float_coverImage"
        android:text="Track Name" />

    <TextView
        android:id="@+id/float_artistName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/float_trackName"
        android:layout_toEndOf="@+id/float_coverImage"
        android:text="Artist Name" />

    <Button
        android:id="@+id/float_playPauseButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:text="Pause" />
</RelativeLayout>
